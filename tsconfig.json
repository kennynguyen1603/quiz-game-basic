{
    "compilerOptions": {
      "types": ["mocha", "chai"],
      "typeRoots": ["./node_modules/@types"],
      "lib": ["es2015", "es2017", "dom"],
      "module": "CommonJS",
      "moduleResolution": "node",
      "target": "es2020",  
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "outDir": "dist",
      "strict": false,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    }
}
  